@model Producto
<div class="card shadow border-0 my-4>
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Borrar producto</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">

                <div class="form-floating py-2 col-12">
                    <input asp-for="Titulo" disabled class="form-control border-0 shadow" />
                    <label asp-for="Titulo" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Descripcion" disabled class="form-control border-0 shadow" />
                    <label asp-for="Descripcion" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Autor" disabled class="form-control border-0 shadow" />
                    <label asp-for="Autor" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ListaPrecios" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListaPrecios" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Precio" disabled class="form-control border-0 shadow" />
                    <label asp-for="Precio" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Precio50" disabled class="form-control border-0 shadow" />
                    <label asp-for="Precio50" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Precio100" disabled class="form-control border-0 shadow" />
                    <label asp-for="Precio100" class="ms-2"></label>
                </div>

                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Borrar</button>
                    </div>

                    <div class="col-6 col-md-4">
                        <a asp-controller="producto" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



