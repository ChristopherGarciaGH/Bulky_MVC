@page
@model BulkyWebRazor_Temp.Pages.Categorias.BorrarModel

<form method="post">
    <input asp-for="Categoria.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Borrar Categoria</h2>
            <hr />
        </div>

        <div class="mb-3 row">
            <label asp-for="Categoria.Nombre" class="p-0"></label>
            <input asp-for="Categoria.Nombre" disabled class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="Categoria.DisplayOrder" class="p-0"></label>
            <input asp-for="Categoria.DisplayOrder" disabled class="form-control" />

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Borrar</button>
            </div>

            <div class="col-6 col-md-4">
                <a asp-page="/categorias/index" class="btn btn-outline-secondary form-control">
                    Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</form>


