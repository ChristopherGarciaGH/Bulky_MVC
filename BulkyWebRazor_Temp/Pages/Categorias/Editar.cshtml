@page
@model BulkyWebRazor_Temp.Pages.Categorias.EditarModel

<form method="post">
    <input asp-for="Categoria.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Editar Categoria</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="mb-3 row">
            <label asp-for="Categoria.Nombre" class="p-0"></label>
            <input asp-for="Categoria.Nombre" class="form-control" />
            <span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3 row">
            <label asp-for="Categoria.DisplayOrder" class="p-0"></label>
            <input asp-for="Categoria.DisplayOrder" class="form-control" />
            <span asp-validation-for="Categoria.DisplayOrder" class="text-danger"></span>

        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Actualizar</button>
            </div>

            <div class="col-6 col-md-4">
                <a asp-page="/categorias/index" class="btn btn-outline-secondary form-control">
                    Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        //Validación del lado del cliente
        <partial name="_ValidationScriptsPartial" />
    }
}
